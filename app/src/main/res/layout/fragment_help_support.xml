<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="helpView"
            type="com.mamits.zini24vendor.viewmodel.fragment.HelpSupportViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.fragment.dashboard.PaymentFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.mamits.zini24vendor.ui.customviews.CustomTextView
                android:id="@+id/txt_h1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="Help and Support"
                android:textColor="@color/black"
                android:textSize="@dimen/_15ssp"
                app:fontName="Raleway-Medium.ttf" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_h1"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="@dimen/_5sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/ll_form"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_margin="@dimen/_10sdp"
                        android:background="@drawable/help_support_box_layout"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:weightSum="3">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/help_support_box_layout">

                            <com.mamits.zini24vendor.ui.customviews.CustomTextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_toStartOf="@id/view1"
                                android:alpha="0.7"
                                android:gravity="center_vertical"
                                android:text="Name"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12ssp"
                                app:fontName="Raleway-Medium.ttf" />

                            <View
                                android:id="@+id/view1"
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="match_parent"
                                android:layout_centerHorizontal="true"
                                android:background="@color/divider" />

                            <com.mamits.zini24vendor.ui.customviews.CustomTextView
                                android:id="@+id/txt_name"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_toEndOf="@id/view1"
                                android:alpha="0.7"
                                android:gravity="center_vertical"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12ssp"
                                app:fontName="Raleway-Medium.ttf" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/help_support_box_layout">

                            <com.mamits.zini24vendor.ui.customviews.CustomTextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_toStartOf="@id/view2"
                                android:alpha="0.7"
                                android:gravity="center_vertical"
                                android:text="Email"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12ssp"
                                app:fontName="Raleway-Medium.ttf" />

                            <View
                                android:id="@+id/view2"
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="match_parent"
                                android:layout_centerHorizontal="true"
                                android:background="@color/divider" />

                            <com.mamits.zini24vendor.ui.customviews.CustomTextView
                                android:id="@+id/txt_email"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_toEndOf="@id/view2"
                                android:alpha="0.7"
                                android:gravity="center_vertical"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12ssp"
                                app:fontName="Raleway-Medium.ttf" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/help_support_box_layout">

                            <com.mamits.zini24vendor.ui.customviews.CustomTextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_toStartOf="@id/view3"
                                android:alpha="0.7"
                                android:gravity="center_vertical"
                                android:text="Contact Number"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12ssp"
                                app:fontName="Raleway-Medium.ttf" />

                            <View
                                android:id="@+id/view3"
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="match_parent"
                                android:layout_centerHorizontal="true"
                                android:background="@color/divider" />

                            <com.mamits.zini24vendor.ui.customviews.CustomTextView
                                android:id="@+id/txt_number"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_toEndOf="@id/view3"
                                android:alpha="0.7"
                                android:gravity="center_vertical"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12ssp"
                                app:fontName="Raleway-Medium.ttf" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_sub"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <com.mamits.zini24vendor.ui.customviews.CustomTextView
                            android:id="@+id/txt_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:text="Help and Support"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13ssp"
                            app:fontName="Raleway-Regular.ttf" />

                        <com.mamits.zini24vendor.ui.customviews.CustomTextView
                            android:id="@+id/txt_msg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_10sdp"
                            android:alpha="0.7"
                            android:text="Help and Support"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12ssp"
                            app:fontName="Raleway-Regular.ttf" />
                    </LinearLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>
    </FrameLayout>
</layout>