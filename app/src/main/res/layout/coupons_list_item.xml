<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_marginBottom="@dimen/_5sdp"
    android:backgroundTint="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/rl_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5sdp"
            android:backgroundTint="@color/tab_select">

            <com.mamits.zini24vendor.ui.customviews.CustomTextView
                android:id="@+id/txt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:text="23 Jan, 2021"
                android:textColor="@color/white"
                android:textSize="@dimen/_8ssp"
                app:fontName="Montserrat-SemiBold.ttf" />
        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_baseline_delete_24"
            android:padding="@dimen/_4sdp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_date"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_toStartOf="@id/ll_status"
                android:orientation="vertical">

                <com.mamits.zini24vendor.ui.customviews.CustomTextView
                    android:id="@+id/txt_discount_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#6549845"
                    android:textColor="@color/color_orange"
                    android:textSize="@dimen/_10ssp"
                    app:fontName="Montserrat-Regular.ttf" />

                <com.mamits.zini24vendor.ui.customviews.CustomTextView
                    android:id="@+id/txt_coupon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:alpha="0.7"
                    android:singleLine="true"
                    android:text="RRB Group B"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp"
                    app:fontName="Montserrat-SemiBold.ttf" />

                <com.mamits.zini24vendor.ui.customviews.CustomTextView
                    android:id="@+id/txt_disc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:alpha="0.7"
                    android:singleLine="true"
                    android:text="Simple Ticket - Simple Ticket"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_9ssp"
                    app:fontName="Montserrat-Regular.ttf" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="vertical">

                <com.mamits.zini24vendor.ui.customviews.CustomTextView
                    android:id="@+id/txt_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Active"
                    android:textColor="@color/green_39ae00"
                    android:textSize="@dimen/_10ssp"
                    app:fontName="Montserrat-SemiBold.ttf" />

                <com.mamits.zini24vendor.ui.customviews.CustomTextView
                    android:id="@+id/txt_min_max_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:text="â‚¹ 750-2500"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_9ssp"
                    app:fontName="Montserrat-SemiBold.ttf" />
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>

